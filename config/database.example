# MySQL.  Versions 4.1 and 5.0 are recommended.
#
# Install the MySQL driver:
#   gem install mysql2
#
# And be sure to use new-style password hashing:
#   http://dev.mysql.com/doc/refman/5.0/en/old-client.html
development:
  adapter: postgresql
  encoding: unicode
  database: sresetter_development
  pool: 5
  username: sresetter_dev
  password: '!sresetter_dev!'
  host: localhost

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test: &test
  adapter: postgresql
  encoding: unicode
  database: sresetter_test
  pool: 5
  username: sresetter_dev
  password: '!sresetter_dev!'
  host: localhost

production:
  adapter: postgresql
  encoding: unicode
  database: sresetter_production
  pool: 5
  username: sresetter
  password: '!sresetter!'
  host: localhost

cucumber:
  <<: *test
