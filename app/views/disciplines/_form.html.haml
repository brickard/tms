= render :partial => 'shared/form_errors', :locals => { :@model => @discipline }
- url = @discipline.new_record? ? employee_disciplines_path : employee_discipline_path(@employee, @discipline)
= form_for(@discipline, :url => url, :html => { :class => 'bp'}) do |f|
  %br/
  %p{ :class => 'field shorty required' }
    = f.label :occured_on, 'Date of Incident'
    %br/
    = f.text_field :occured_on, :class => 'recent'
  %p{ :class => 'field long required' }
    = f.label :name, 'Incident Name'
    %br/
    = f.text_field :name
  %p{ :class => 'field required' }
    = f.collection_select :store_id, Store.all, :id, :display_name, :include_blank => true
    = f.label :store_id, 'Store'
  %p{ :class => 'field shorty required' }
    = f.label :verbal_warning_on, 'Date of Verbal Warning'
    %br/
    = f.text_field :verbal_warning_on, :class => 'recent'
  %p{ :class => 'field long required' }
    = f.label :verbal_warning_subject, 'Subject of Verbal Warning'
    %br/
    = f.text_field :verbal_warning_subject
  %p{ :class => 'field large_text_area required' }
    = f.label :verbal_warning_reason, 'Reason for Verbal Warning'
    %br/
    = f.text_area :verbal_warning_reason
  %p{ :class => 'field large_text_area required' }
    = f.label :verbal_warning_action, 'Action to be taken if not addressed'
    %br/
    = f.text_area :verbal_warning_action
  %p{ :class => 'field short required' }
    = f.label :possible_termination_on, 'Date of Possible Termination'
    %br/
    = f.text_field :possible_termination_on, :class => 'recent'
  %p{ :class => 'field shorty required' }
    = f.collection_select :supervisor_id, User.managers, :id, :full_name, :include_blank => true
    = f.label :supervisor_id, 'Supervisor'
  %p{ :class => 'field button' }
    = content_tag :button, 'Save', :type => :submit, :id => :save

= content_for(:footer) do
  = javascript_include_tag 'datepicker'
