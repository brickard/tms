= render :partial => 'shared/form_errors', :locals => { :@model => @evaluation }
- url = @evaluation.new_record? ? employee_evaluations_path : employee_evaluation_path(@employee, @evaluation)
= form_for(@evaluation, :url => url, :html => { :class => 'bp'}) do |f|
  %p{ :class => 'field short required' }
    = f.select :attitude, Evaluation::RATINGS
    = f.label :attitude
  %p{ :class => 'field short required' }
    = f.select :work_ethic, Evaluation::RATINGS
    = f.label :work_ethic, 'Work Ethic'
  %p{ :class => 'field short required' }
    = f.select :communication, Evaluation::RATINGS
    = f.label :communication
  %p{ :class => 'field short required' }
    = f.select :abilities, Evaluation::RATINGS
    = f.label :abilities
  %p{ :class => 'field short required' }
    = f.select :team_work, Evaluation::RATINGS
    = f.label :team_work, 'Team Work'
  %p{ :class => 'field short required' }
    = f.select :appearance, Evaluation::RATINGS
    = f.label :appearance
  %p{ :class => 'field short required' }
    = f.select :professionalism, Evaluation::RATINGS
    = f.label :professionalism
  %p{ :class => 'field short required' }
    = f.select :preparedness, Evaluation::RATINGS
    = f.label :preparedness
  %p{ :class => 'field short required' }
    = f.select :organization, Evaluation::RATINGS
    = f.label :organization
  %p{ :class => 'field short required' }
    = f.select :goals, Evaluation::RATINGS
    = f.label :goals, 'Personal Finance and Goals'
  %p{ :class => 'field short required' }
    = f.text_area :manager_comments
    = f.label :manager_comments, 'Manager Comments'
  %p{ :class => 'field short required' }
    = f.text_area :employee_comments
    = f.label :employee_comments, 'Employee Comments'
  %p{ :class => 'field button' }
    = content_tag :button, 'Save', :type => :submit, :id => :save

