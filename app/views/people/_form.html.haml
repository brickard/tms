= form_for(@person) do |f|
  - if @person.errors.any?
    #error_explanation
      %h2
        = pluralize(@person.errors.count, "error")
        prohibited this person from being saved:
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :middle_name
    %br/
    = f.text_field :middle_name
  .field
    = f.label :address1
    %br/
    = f.text_field :address1
  .field
    = f.label :address2
    %br/
    = f.text_field :address2
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .field
    = f.label :zipcode
    %br/
    = f.text_field :zipcode
  .field
    = f.label :ssn
    %br/
    = f.text_field :ssn
  .field
    = f.label :dob
    %br/
    = f.text_field :dob
  .field
    = f.label :home_phone
    %br/
    = f.text_field :home_phone
  .field
    = f.label :mobile_phone
    %br/
    = f.text_field :mobile_phone
  .field
    = f.label :other_phone
    %br/
    = f.text_field :other_phone
  .actions
    = f.submit
