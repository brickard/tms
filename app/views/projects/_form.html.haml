= render :partial => 'shared/form_errors', :locals => { :@model => @project }
= form_for(@project, :html => { :class => 'bp'}) do |f|
  %p{ :class => 'field short required' }
    = f.collection_select( :store_id, Store.all, :id, :name_and_number, |
      { :prompt => :true } )                                 |
    = f.label :store_id
  %p{ :class => 'field short required' }
    = f.text_field :name
    = f.label :name
  - if %w{ new create }.include?(action_name)
    %p{ :class => 'field short required' }
      = text_field_tag :shift_count
      = label_tag 'Number of Shifts'
  %p{ :class => 'field button' }
    = content_tag :button, 'Save', :type => :submit, :id => :save
