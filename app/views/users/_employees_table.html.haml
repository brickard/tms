%table{ :class => 'section_content data_table' }
  %tr
    %th Name
    %th UserID (email)
    %th
    %th
    - if can? :update, User
      %th
  - @users.each do |user|
    %tr
      %td= user.full_name
      %td= user.email
      %td= link_to 'Print', user_print_path(user, :scope => @scope, :format => :pdf), :target => '_blank'
      - if can? :update, user
        %td= link_to 'Edit', edit_employee_path(user)
      %td= link_to 'Delete', employee_path(user), :confirm => 'Are you sure?', :method => :delete
%br/
