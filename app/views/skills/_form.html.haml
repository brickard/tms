= render :partial => 'shared/form_errors', :locals => { :@model => @skill }
= form_for(@skill, :html => { :class => 'bp'}) do |f|
  %p{ :class => 'field short required email' }
    = f.text_field :name
    = f.label :name
  %p{ :class => 'field button' }
    = content_tag :button, 'Save', :type => :submit, :id => :save
