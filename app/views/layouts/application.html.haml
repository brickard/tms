!!! html
%html
  %head
    %title Storeresetter
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    = yield(:head)
  %body{ :id => "#{action_name}", :class => 'home' }
    #content_wrap{ :class => 'container' }
    #header{ :id => 'banner', :class => 'body' }
      #title
        %h1 TAB Retail Remodeling
        %h2 create it and we will install it
      #nav
        = render_navigation(:expand_all => true) if current_user
      = render :partial => 'shared/authentication' if current_user
    #content
      = yield  
    #foot
      = javascript_include_tag :defaults
      = yield(:foot)

