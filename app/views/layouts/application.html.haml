!!! html
%html
  %head
    %title Storeresetter
    = csrf_meta_tag
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'jquery-ui-1.8.5.custom.css'
    = stylesheet_link_tag 'jquery.multiselect.css'
    = yield(:head)
  %body{ :class => 'bp' }
    #container
      #header_container
        #header
          = "TAB Retail Remodeling"
          = " Administration" if current_user
          = render :partial => 'shared/user_menu' if current_user
      - if current_user
        #nav_container
          #nav
            = render_navigation(:level => 1)
      #content_container
        #content
          = render :partial => 'shared/content_nav'
          #main_content{ :class => 'section' }
            = yield  
      #footer_container
        #footer
          = javascript_include_tag :defaults
          = yield(:footer)

