!!!
%html
  %head
    %title Storeresetter
    = stylesheet_link_tag :all
    = formtastic_stylesheet_link_tag
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)
  %body
    #main.main_content
      #top_navigation
        = render_navigation(:level => 1) if current_user
      .clear_float
      .content_wrapper
        .content
          #breadcrumbs
            = render_navigation(:renderer => :breadcrumbs, :join_with => ' &raquo; ') if current_user
          #authentication
            = render :partial => 'shared/authentication' if current_user
          %p.notice= notice
          %p.alert= alert
          = yield
        .clear_float
