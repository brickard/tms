= render :partial => 'shared/form_errors', :locals => { :@model => @region }
= form_for(@region, :html => { :class => 'bp'}) do |f|
  %p{ :class => 'field short required' }
    = f.collection_select( :client_id, Client.all, :id, :name, |
      { :prompt => true } )                                    |
    = f.label :client_id
  %p{ :class => 'field short required' }
    = f.text_field :name
    = f.label :name
  %p{ :class => 'field short required' }
    = f.check_box :active, :checked => true
    = f.label :active
  %p{ :class => 'field button' }
    = content_tag :button, 'Save', :type => :submit, :id => :save
