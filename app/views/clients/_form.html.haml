= render :partial => 'shared/form_errors', :locals => { :@model => @client }
= form_for(@client, :html => { :class => 'bp'}) do |f|
  %p{ :class => 'field short required' }
    = f.text_field :name
    = f.label :name
  %p{ :class => 'field short required' }
    = f.check_box :active, :checked => true
    = f.label :active
  %p{ :class => 'field button' }
    = content_tag :button, 'Save', :type => :submit, :id => :save
