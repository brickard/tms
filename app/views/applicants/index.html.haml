.section_heading
  Applicants
  .section_heading_menu
    = link_to 'New Applicant', new_applicant_path
%table{ :class => 'section_content data_table' }
  %tr
    %th User
    %th Last name
    %th First name
    %th City
    %th State
    %th
    %th
    %th
  - @applicants.each do |applicant|
    %tr
      %td= applicant.user.email rescue 'No User Found'
      %td= applicant.last_name
      %td= applicant.first_name
      %td= applicant.city
      %td= applicant.state
      %td= link_to 'Show', applicant
      %td= link_to 'Edit', edit_applicant_path(applicant)
      %td= link_to 'Delete', applicant, :confirm => 'Are you sure?', :method => :delete
%br/
