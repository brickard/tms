= content_for :head do
  = javascript_include_tag 'datepicker'
= semantic_form_for @employer, :url => create_applicant_employers_path(@person)  do |f|
  - if @employer.errors.any?
    #error_explanation
      %h2
        = pluralize(@employer.errors.count, "error")
        prohibited this employment application from being saved:
      %ul
        - @employer.errors.full_messages.each do |msg|
          %li= msg
  = f.inputs do
    = f.input :company_name, :label => 'Company name'
    = f.input :start_date, :as => :string, :label => 'Start date', |
      :input_html => { :class => 'recent' }
    = f.input :end_date, :as => :string, :label => 'End date', |
      :input_html => { :class => 'recent' }
    = f.input :phone_number, :label => 'Phone number'
    = f.input :job_title, :label => 'Job Title/Description'
    = f.input :supervisor_name, :label => 'Supervisor Name'
    = f.input :start_salary, :label => 'Start $', :input_html => { :size => '16' }
    = f.input :end_salary, :label => 'End $', :input_html => {  :size => '16' }
    = f.input :reason_for_leaving, :label => 'Reason for leaving', :as => :text
  = f.buttons do
    = f.commit_button :label => 'Next'

