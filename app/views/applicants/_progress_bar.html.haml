=content_for(:footer) do
  :javascript
    $(document).ready(function() {
      $( "#progressbar" ).progressbar({
        value: #{@progress_value}
      });
    });

#progress
  #progressbar
  - unless @person.form_step >= @total_steps
    %p.step_text You are currently on step #{@person.form_step} of #{@total_steps}.
  - else
    %p.step_text All steps complete!
