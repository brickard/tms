= content_for :head do
  = javascript_include_tag 'datepicker'
= semantic_form_for @person, :url => applicant_agreement_create_path(@person)  do |f|
  - if @person.errors.any?
    #error_explanation
      %h2
        = pluralize(@person.errors.count, "error")
        prohibited this employment application from being saved:
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg
  = f.inputs do
    = f.input :application_agreement_agreed, :as => :boolean, |
      :label => 'I Agree'
    = f.input :application_agreement_agreed_on, :as => :string, |
      :label => 'Date', :input_html => { :class => 'today' }
  = f.buttons do
    = f.commit_button :label => 'Next'

