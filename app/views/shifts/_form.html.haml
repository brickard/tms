= form_for(@shift) do |f|
  - if @shift.errors.any?
    #error_explanation
      %h2
        = pluralize(@shift.errors.count, "error")
        prohibited this shift from being saved:
      %ul
        - @shift.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :project_id
    %br/
    = f.collection_select( :project_id, Project.all, :id, :display_name, |
      { :prompt => true } )                                              |
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
