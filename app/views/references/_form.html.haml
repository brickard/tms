= form_for @reference do |f|
  -if @reference.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reference.errors.count, "error")} prohibited this reference from being saved:"
      %ul
        - @reference.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :employee_id
    = f.text_field :employee_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :contact_info
    = f.text_field :contact_info
  .field
    = f.label :relationship
    = f.text_field :relationship
  .actions
    = f.submit 'Save'
